  @@index([status])
  @@index([notificationType])
  @@index([requisitionId])
  @@map("donor_notifications")
}

model DonorResponse {
  id            String              @id @default(cuid())
  response      DonorResponseStatus @default(NO_RESPONSE)
  message       String?             @db.Text
  
  // Contact information (revealed based on privacy settings)
