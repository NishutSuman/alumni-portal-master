# ============================================
# API CONFIGURATION FOR MOBILE
# ============================================

# For Android Emulator: Use 10.0.2.2 instead of localhost
# For Physical Device: Use your computer's local IP address
VITE_API_BASE_URL=http://10.0.2.2:3000/api

# Copy all other settings from .env
VITE_APP_NAME=GUILD
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Razorpay Configuration
VITE_RAZORPAY_KEY_ID=rzp_test_bN22MnI4VGy4s3

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_SERVICE_WORKER=false

# Development Tools
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Security
VITE_ENABLE_CSP=false
VITE_ALLOWED_ORIGINS=http://10.0.2.2:3000,http://localhost:3000

# NOTE: For physical device testing, replace 10.0.2.2 with your computer's IP
# Find your IP: 
# Mac: ifconfig | grep "inet " | grep -v 127.0.0.1
# Windows: ipconfig
# Then use: http://YOUR_IP:3000/api